
<center>
    <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
      <div class="card-header">Login</div>
      <div class="card-body">
        <%= form_with  url: connect_index_path do  %>
          <div class="form-group">
            <label>Email</label>
            <%= text_field_tag :email %>
          </div>
          <div class="form-group">
              <label>Mot de passe</label>
              <%= password_field_tag :psw %>
          </div>
          <div class="form">
              <%= submit_tag "Connection", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
</center>