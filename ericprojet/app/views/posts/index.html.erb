<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Age</th>
    </tr>
  </thead>
  <tbody>
<% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.age %></td>
        <td><%= link_to 'Afficher', post, class:"btn btn-primary" %></td>
        <td><%= link_to 'Modifier', edit_post_path(post), class:"btn btn-warning" %></td>
        <td><%= link_to 'Supprimer', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>

  </tbody>
</table>


<p>
  <%= link_to 'Nouveau', new_post_path , class:"btn btn-success" %>
</p>